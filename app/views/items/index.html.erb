<h1>List of Tasks</h1>

<table class="table table-striped incomplete">
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <div class='js-items'>
      <%= render @items %>
    </div>
  </tbody>
</table>

<br>

<%= link_to 'New Item', new_item_path, remote: true, class: 'btn btn-primary' %>

<h1>Completed Tasks</h1>

<table class="table table-striped complete">
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <%= render partial: "items/item", collection: @items_completed, locals: {completed: "completed_"} %>
  </tbody>
</table>
